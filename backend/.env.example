# College Cash Swap - Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/college-cash-swap
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/college-cash-swap

# JWT Security (CRITICAL: Generate a strong secret for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-generated-32-char-secret-from-crypto-randomBytes

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (Production domains only)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=false
